<!--ログイン画面-->
<!--IDとパスワードは決められたものしか入らないように-->

<div class="top-userlogin-wrapper text-center">
  <div class="container top-userlogin-container">
    <div class="col-md-offset-4 col-md-4 users-new-container">
      <h1 class="text-black">Log In</h1>
      <h2 class="text-black">This is the system that you manage customer data.</h2>

      <%= form_for @user :session do |f| %>
            <div class="form-group">
              <%= f.label :ID, class: 'text-black' %>
              <%= f.text_field :ID, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: 'text-black' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>

            <%= f.submit "ログイン", class: 'btn-block btn-black' %>
          <% end %>
    
      </div>
    </div>
  </div>
</div>
